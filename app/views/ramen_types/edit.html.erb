<%= form_tag "/ramen_types/#{@ramen_type['id']}", method: :patch do%>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @ramen_type["name"] %>
  </div>
  <div>
    <%= label_tag :soup_base %>
    <%= text_field_tag :soup_base, @ramen_type["soup_base"] %>
  </div>
  <div>
    <%= label_tag :flavor %>
    <%= text_field_tag :flavor, @ramen_type["flavor"] %>
  </div>
  <div>
    <%= label_tag :broth_color %>
    <%= text_field_tag :broth_color, @ramen_type["broth_color"] %>
  </div>
  <div>
    <%= label_tag :other_ingredients %>
    <%= text_field_tag :other_ingredients, @ramen_type["other_ingredients"] %>
  </div>
 <div>
    <%= submit_tag "Update Ramen Type" %>
  </div>
<% end %>