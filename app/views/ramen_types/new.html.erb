<%= form_tag '/ramen_types', method: :post do%>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :soup_base %>
    <%= text_field_tag :soup_base %>
  </div>
  <div>
    <%= label_tag :flavor %>
    <%= text_field_tag :flavor %>
  </div>
  <div>
    <%= label_tag :broth_color %>
    <%= text_field_tag :broth_color %>
  </div>
  <div>
    <%= label_tag :other_ingredients %>
    <%= text_field_tag :other_ingredients %>
  </div>
 <div>
    <%= submit_tag "Add Ramen Type" %>
  </div>
<% end %>